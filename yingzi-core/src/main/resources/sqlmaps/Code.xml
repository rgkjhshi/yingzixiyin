<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mapper.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper  namespace="com.yingzixiyin.core.dao.CodeDao">

    <sql id="base_select">
        SELECT
            id                  AS id,
            phone               AS phone,
            code                AS code,
            update_time         AS updateTime
        FROM code
    </sql>

    <!-- 查询条件 -->
    <sql id="where_condition">
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="phone != null">
                AND phone = #{phone}
            </if>
        </where>
    </sql>

    <insert id="insert" parameterType="Code" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO code
        (
        <if test="phone != null">
            phone
        </if>
        <if test="code != null">
            ,code
        </if>
        <if test="updateTime != null">
            ,update_time
        </if>
        )
        values
        (
        <if test="phone != null">
            #{phone}
        </if>
        <if test="code != null">
            ,#{code}
        </if>
        <if test="updateTime != null">
            ,#{updateTime}
        </if>
        )
    </insert>

    <update id="update" parameterType="Code">
        UPDATE   record
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="getCode" parameterType="Code" resultType="Code">
        <include refid="base_select" />
        <include refid="where_condition" />
        limit 1;
    </select>

</mapper>